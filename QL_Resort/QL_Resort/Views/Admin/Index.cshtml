<div style="padding-top:100px; padding-bottom:50px">
    <div class="container" style=" background-color:white">
        <div class="section_title text-center">
            <div class="row">
                <h2 class="title_color" style="text-align:center"></h2>
            </div>
            @using (Html.BeginForm("TimKiem", "Admin"))
            {
                <div class="row">
                    <div class="col-md-6" style="padding-right:350px">
                        <a href="/Admin/DanhSachDatTruoc" class="btn theme_btn" style="background-color: #00B4CC; color:white">Danh Sách Đặt Trước</a>
                    </div>
                    <div class="search col-md-6" style="padding-left:50px">
                        <input type="text" id="emailkh" name="emailkh" class="searchTerm" placeholder="Email Khách hàng" style="width:400px;height:36px">
                        <button type="submit" class="searchButton">
                            <i class="fa fa-search"></i>
                        </button>
                    </div>
                </div>
            }
            </div>
        <div>
            <table class="table" style="width:100%; margin:auto; border:hidden">
                <tr style="border-bottom:1px solid black">
                    <th>LOẠI PHÒNG</th>
                    <th>GIÁ</th>
                    <th>SL NGƯỜI LỚN</th>
                    <th>SL TRẺ EM</th>
                    <th style="text-align:center" colspan="3">CHỨC NĂNG</th>
                </tr>
                @foreach (var item in Model.LoaiPhong)
                {
                    <tr>
                        <td>@item.TenLoai</td>
                        <td>@string.Format("{0:0,0 }", @item.Gia)VNĐ<small>/Đêm</small></td>
                        <td>@item.SoLuongNguoiLon</td>
                        <td>@item.SoLuongTreEm</td>
                        <td style="text-align:center"><a href="@Url.Action("DatPhong", "Admin", new { id = item.Id })" class="btn theme_btn" style="background-color:limegreen; color:white">Đặt Phòng</a></td>
                        <td><a href="@Url.Action("XemChiTiet", "Admin", new { id = item.Id })" a class="btn theme_btn" style="width:150px">Xem chi tiết</a></td>
                    </tr>
                }
            </table>
        </div>
    </div>
</div>

