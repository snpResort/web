
@{
    ViewBag.Title = "DanhSachDatTruoc";
    Layout = "~/Views/Shared/_LayoutQL2.cshtml";
}
@using QL_Resort.Models
@model dynamic
<div style="padding-top:5px; padding-bottom:50px">
    @using (Html.BeginForm("TimKiemDatTruocGo", "Admin"))
    {
        <div class="search col-md-6" style="padding-left:100px">
            <input type="text" id="txtTK" name="txtTK" class="searchTerm" placeholder="Tìm theo id đặt trước" style="width:400px;height:36px">
            <button type="submit" class="searchButton">
                <i class="fa fa-search"></i>
            </button>
        </div>
        <br />
        <h2 style="text-align:center;padding-bottom:30px">Danh Sách Đặt Trước</h2>
        <div>
            <table class="table" style="width:100%; margin:auto; border:hidden">
                <tr style="border-bottom:1px solid black">
                    <th>ID</th>
                    <th>ID_KH</th>
                    <th>NGÀY ĐẶT</th>
                    <th>NGÀY TRẢ</th>
                </tr>
                @foreach (var item in Model.TTDP)
                {
                    <tr>
                        <td>@item.Id</td>
                        <td>@item.Id_KH</td>
                        <td>@item.NgayDat</td>
                        <td>@item.NgayTra</td>
                    </tr>
                }
            </table>
        </div>
    }
</div>

