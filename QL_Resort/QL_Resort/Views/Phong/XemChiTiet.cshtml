@{
    ViewBag.Title = "XemChiTiet";
    Layout = "~/Views/Shared/_Layout2.cshtml";
}
@using QL_Resort
@model dynamic

<div class="row" style="padding-top:100px">
    <div class="col-md-7" style="color:white;">
        <div class="row" style="width: 100%">
            <div id="myCarousel" class="carousel slide border" data-ride="carousel">
                <!-- Indicators -->
                <ol class="carousel-indicators">
                    @for (int i = 0; i < Model.HA.Count; i++)
                    {
                        if (i == 0)
                        {
                            <li data-target="#myCarousel" data-slide-to="@i" class="active"></li>
                        }
                        else
                        {
                            <li data-target="#myCarousel" data-slide-to="@i"></li>
                        }
                    }
                </ol>
                <div class="carousel-inner" style="width:700px;height:500px">
                    @for (int i = 0; i < Model.HA.Count; i++)
                    {
                        if (i == 0)
                        {
                            <div class="carousel-item active">
                                <img class="d-block w-100" src="@Model.HA[i].imagePath" alt="1" style="width:700px;height:500px">
                            </div>
                        }
                        else
                        {
                            <div class="carousel-item">
                                <img class="d-block w-100" src="@Model.HA[i].imagePath" alt="1" style="width:700px;height:500px">
                            </div>
                        }
                    }
                </div>
                <!-- Controls -->
                <a class="carousel-control-prev" href="#myCarousel" role="button" data-slide="prev">
                    <span class="carousel-control-prev-icon" aria-hidden="true"></span>
                    <span class="sr-only">Previous</span>
                </a>
                <a class="carousel-control-next" href="#myCarousel" role="button" data-slide="next">
                    <span class="carousel-control-next-icon" aria-hidden="true"></span>
                    <span class="sr-only">Next</span>
                </a>
            </div>
        </div>
        <br /><br />
        <div>
            @foreach (var item3 in Model.MT)
            {
                <p style="font-size:16px">@item3.MoTa<br /></p>
            }
        </div>
    </div>
    <div class="col-md-5" style="padding-left:100px">
        <br /><br /><br />
        @foreach (var item in Model.LayLP)
        {
            <div class="row" style="color:white">
                <h2>@item.TenLoai</h2>
            </div>
            <div class="row" style="color:white">
                <p style="font-size:16px">@item.MoTa</p>
            </div>
            <div class="row" style="color:white">
                <p style="font-size:16px">Số lượng người lớn: @item.SoLuongNguoiLon</p>

            </div>
            <div class="row" style="color:white">

                <p style="font-size:16px">Số lượng trẻ em: @item.SoLuongTreEm</p>
            </div>
            <div class="row">
                <p style="color: white; font-size: 16px">@string.Format("{0:0,0 }", @item.Gia)VNĐ<small>/Đêm</small></p>
            </div>
        }
    <div class="row" style="padding-top:16px">
        @foreach (var item1 in Model.LayLP)
        {
            <a href="@Url.Action("DatPhong", "Phong", new { id = item1.Id })" class="btn theme_btn button_hover">Đặt Ngay</a>
        }
        @*<a href="/Phong/DatPhongSL" class="btn theme_btn button_hover">Đặt Ngay</a>*@
    </div>
    </div>
</div>

